doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    block content
    h1= title

    form(class="form-config"
         id="form-config")
      p Specify the voting portal and voter account

      div.form-group
        p(for='httpEndpoint') HTTP Endpoint:
        input(type="text"
              class="httpEndpoint"
              name="httpEndpoint")

      div.form-group
        p(for='chainId') ChainId:
        input(type="text"
              class="chainId"
              name="chainId")

      div.form-group
        p(for='account') Account:
        input(type="text"
              class="account"
              name="account")

      div.form-group
        a(class='button', href='javascript:;' id="btn-save") Save



    div(id="config-container")
      p Voting portal and voter account specified

      div.form-group
        label(for='httpEndpoint') HTTP Endpoint:
        p(id="httpEndpoint",
          class="httpEndpoint")

      div.form-group
        label(for='chainId') ChainId:
        p(id="chainId",
          class="chainId")

      div.form-group
        label(for='account') Account:
        p(id="account"
          class="account")

      div.form-group
        a(class='button', href='javascript:;' id="btn-edit") Edit



    form(class="form-vote"
         id="form-vote")
      p Specify the producers you want to vote for

      div.form-group
        p(for='producers') Producers(seperate by space):
        textarea(type="text"
                 name="producers")

      div.form-group
        p(for='secretKey') secretKey:
        textarea(type="text"
                 name="secretKey")

      div.form-group
        a(class='button', href='javascript:;' id="btn-vote") Vote


    script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js')
    script(src='/javascripts/index.js')
